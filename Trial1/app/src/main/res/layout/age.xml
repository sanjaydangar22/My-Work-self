<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    tools:context=".Age">
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_back"
        android:layout_marginBottom="10sp"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/agebox"
        android:hint="Enter your Name"
        android:textColorHint="#F60903"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingVertical="10sp"
        android:paddingLeft="50sp"
        android:textSize="20sp" />
    <!--Tital-1-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Today's Date"
        android:textColor="#1E88E5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!--    Date Today-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:layout_weight="0">

        <!--Date-->
        <EditText
            android:id="@+id/edtTd1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/agebox"
            android:gravity="center"
            android:textColorHint="#F60903"
            android:hint="DD"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="-"
            android:textSize="50sp" />

        <!--        Month-->
        <EditText
            android:id="@+id/edtTd2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/agebox"
            android:gravity="center"
            android:textColorHint="#F60903"
            android:hint="MM"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textSize="50sp" />

        <!--        Year-->
        <EditText
            android:id="@+id/edtTd3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/agebox"
            android:gravity="center"
            android:hint="YY"
            android:imeOptions="actionNext"
            android:textColorHint="#F60903"
            android:inputType="number"
            android:textSize="20sp" />
    </LinearLayout>

    <!--    Tital-2-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textColor="#1E88E5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!--   Birth Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0">

        <!--Date-->
        <EditText
            android:id="@+id/edtDb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/agebox"
            android:textColorHint="#F60903"
            android:gravity="center"
            android:hint="DD"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textSize="50sp" />

        <!--        Month-->
        <EditText
            android:id="@+id/edtDb2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColorHint="#F60903"
            android:background="@drawable/agebox"
            android:gravity="center"
            android:hint="MM"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textSize="50sp" />

        <!--        Year-->
        <EditText
            android:id="@+id/edtDb3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColorHint="#F60903"
            android:background="@drawable/agebox"
            android:gravity="center"
            android:hint="YY"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_weight="0">

        <!--        Calculate-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7CB342"
            android:padding="10sp"
            android:text="Calculate"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--        Clear-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Clear"
            android:padding="10sp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--Name Answer-->
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50sp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!--   Answer-Tital -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <!--Year-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="50sp"
            android:text="Year"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!--        Month-->
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20sp"
            android:text="Month"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <!--        Day-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20sp"
            android:text="Day"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--   Answer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <!--Year-->
        <TextView
            android:id="@+id/txtAns3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#1E88E5"
            android:paddingLeft="50sp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textSize="50sp" />

        <!--        Month-->
        <TextView
            android:id="@+id/txtAns2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#1E88E5"
            android:layout_weight="1"
            android:paddingLeft="50sp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textSize="50sp" />

        <!--        Day-->
        <TextView
            android:id="@+id/txtAns1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#1E88E5"
            android:layout_weight="1"
            android:paddingLeft="50sp"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>





